<odoo>
    <record model="ir.ui.view" id="storage_backend_form_view">
        <field name="name">storage.backend.form (in storage_backend_load_file)</field>
        <field name="model">storage.backend</field>
        <field name="inherit_id" ref="storage_backend.storage_backend_view_form"/>
        <field name="priority" eval="90"/>
        <field name="arch" type="xml">
            <field name="directory_path" position="after">
                <label for="conservation_days"/>
                <div>
                    <field name="conservation_days" class="oe_inline"/> day(s)
                </div>
                <field name="auto_delete"/>
            </field>
        </field>
    </record>
</odoo>
