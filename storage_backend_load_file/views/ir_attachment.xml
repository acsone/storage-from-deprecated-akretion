<odoo>
    <!--Specific view for storage backend Attachments-->
    <record model="ir.ui.view" id="ir_attachment_form_view">
        <field name="name">ir.attachment.form (in storage_backend_load_file)</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="datas" filename="datas_fname"/>
                            <field name="datas_fname" invisible="1" class="oe_inline oe_right"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="mimetype" groups="base.group_no_one"/>
                            <field name="from_storage_backend" groups="base.group_no_one"/>
                            <field name="res_model" groups="base.group_no_one"/>
                            <field name="res_id" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ir_attachment_tree_view">
        <field name="name">ir.attachment.tree (in storage_backend_load_file)</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="name"/>
                <field name="create_date"/>
                <field name="from_storage_backend" groups="base.group_no_one"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="ir_attachment_search_view">
        <field name="name">ir.attachment.search (in storage_backend_load_file)</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ir_attachment_action">
        <field name="name">ir.attachment.action</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('from_storage_backend', '=', True)]</field>
    </record>

    <record id="ir_attachment_action_tree_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="ir_attachment_action"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="ir_attachment_tree_view"/>
    </record>

    <record id="ir_attachment_action_form_view" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="ir_attachment_action"/>
        <field name="sequence" eval="5"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ir_attachment_form_view"/>
    </record>

    <record model="ir.ui.menu" id="ir_attachment_menuitem">
        <field name="name">Storage backend attachments</field>
        <field name="parent_id" ref="base.next_id_9"/>
        <field name="action" ref="ir_attachment_action"/>
        <field name="sequence" eval="50"/>
    </record>
</odoo>
